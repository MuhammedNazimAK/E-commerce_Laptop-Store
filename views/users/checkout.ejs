    .error-message {
            color: black;
            font-size: 12px;
            position: absolute;
            left: 0;
            bottom: -20px;
        }
        .default-form-box {
            position: relative;
        }
        .price-details {
            margin-top: 20px;
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 5px;
        }

        .price-details h3 {
            margin-bottom: 10px;
        }

        .price-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 5px;
        }

        .price-item.total {
            font-weight: bold;
            border-top: 1px solid #ddd;
            padding-top: 5px;
            margin-top: 5px;
        }

</style>
