 <!-- Top Products Section -->
 <div class="product-default-slider-section section-top-gap-100 section-fluid section-inner-bg">
    <!-- Start Section Content Text Area -->
    <div class="section-title-wrapper" data-aos="fade-up" data-aos-delay="">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-content-gap">
                        <div class="secton-content">
                            <h3 class="section-title">Top Products</h3>
                            <p>Add our top products to your weekly lineup.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Start Product Slider -->
    <div class="product-wrapper" data-aos="fade-up" data-aos-delay="200">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="product-slider-default-1row default-slider-nav-arrow">
                        <!-- Slider main container -->
                        <div class="swiper-container product-default-slider-4grid-1row">
                            <!-- Additional required wrapper -->
                            <div class="swiper-wrapper">
                                <% topProducts.forEach((product, index) => { %>
                                    <!-- Start Product Default Single Item -->
                                    <div class="product-default-single-item product-color--golden swiper-slide">
                                        <div class="image-box" style="background-color: white;">
                                            <a href="/productDetails/<%= product._id %>" class="image-link">
                                                <img src="<%= product.images.highResolutionPhotos[0] %>" alt="<%= product.basicInformation.name %>">
                                            </a>
                                            <% if (!product.status) { %>
                                                <div class="tag">
                                                    <span>Unavailable</span>
                                                </div>
                                            <% } else if (product.discount > 0) { %>
                                                <div class="tag">
                                                    <span><%= product.discount %>% OFF</span>
                                                </div>
                                            <% } else if (product.offerName) { %>
                                                <div class="tag">
                                                    <span><%= product.offerName %></span>
                                                </div>
                                            <% } %>
                                            <div class="action-link">
                                                <div class="action-link-left">
                                                    <% if (product.status) { %>
                                                        <a href="#" data-bs-toggle="modal" data-bs-target="#modalAddcart" onclick="addToCart('<%= product._id %>')">Add to Cart</a>
                                                    <% } else { %>
                                                        <a class="disabled">Unavailable</a>
                                                    <% } %>
                                                </div>
                                                <div class="action-link-right">
                                                  <a href="#" class="add-to-wishlist <%= product.inWishlist ? 'added-to-wishlist' : '' %>" data-product-id="<%= product._id %>">
                                                    <i class="icon-heart"></i>
                                                  </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="content">
                                            <div class="content-left">
                                                <h6 class="title">
                                                    <a href="/productDetails/<%= product._id %>"><%= product.basicInformation.name %></a>
                                                </h6>
                                                <!-- Default Rating -->
                                                <ul class="review-star">
                                                    <li class="fill"><i class="ion-android-star"></i></li>
                                                    <li class="fill"><i class="ion-android-star"></i></li>
                                                    <li class="fill"><i class="ion-android-star"></i></li>
                                                    <li class="fill"><i class="ion-android-star"></i></li>
                                                    <li class="empty"><i class="ion-android-star"></i></li>
                                                </ul>
                                            </div>
                                            <div class="content-right">
                                                <% if (product.discountedPrice < product.originalPrice) { %>
                                                    <span style="color: red;" class="price">₹<%= product.discountedPrice.toFixed(2) %></span>
                                                    <del class="original-price">₹<%= product.originalPrice.toFixed(2) %></del>
                                                <% } else { %>
                                                    <span class="price">₹<%= product.originalPrice.toFixed(2) %></span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End Product Default Single Item -->
                                <% }); %>
                            </div>
                        </div>
                        <!-- If we need navigation buttons -->
                        <div class="swiper-button-prev"></div>
                        <div class="swiper-button-next"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Product Default Slider Section -->
</div>


